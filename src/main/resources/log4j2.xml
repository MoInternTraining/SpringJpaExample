<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Properties>
		<Property name="basePath">${sys:user.home}/log/me</Property>
		<Property name="fileName">testing</Property>
	</Properties>
	<Appenders>
		<RollingFile name="coreLogger"
			fileName="${basePath}/${fileName}.log"
			filePattern="${basePath}/${fileName}-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss}{GMT+06:30} %-8level %t:%class{36}:%L:(%M) - %msg%xEx%n">
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy interval="1" />
				<SizeBasedTriggeringPolicy size="100MB" />
			</Policies>
			<DefaultRolloverStrategy />
		</RollingFile>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss}{GMT+06:30} %-8level %t:%class{36}:%L:(%M) - %msg%xEx%n" />
		</Console>
		<!-- File appender -->
		<File name="File" fileName="app.log">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss}{GMT+06:30} %-8level %t:%class{36}:%L:(%M) - %msg%xEx%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="info" additivity="false">
			<appender-ref ref="coreLogger" />
			<appender-ref ref="console" />
			<appender-ref ref="File" />
		</Root>
	</Loggers>
</Configuration>